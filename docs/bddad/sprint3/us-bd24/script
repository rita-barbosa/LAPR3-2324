CREATE TABLE Operacao (
  idOperacao                 number(10) NOT NULL,
  designacaoOperacaoAgricola varchar2(50) NOT NULL,
  designacaoUnidade          varchar2(5) NOT NULL,
  quantidade                 number(10, 1) NOT NULL,
  dataOperacao               date NOT NULL,
  dataCriacao                timestamp(0) with local time zone DEFAULT CURRENT_TIMESTAMP NOT NULL,
  PRIMARY KEY (idOperacao));

INSERT INTO Operacao (idOperacao, designacaoOperacaoAgricola, designacaoUnidade, quantidade, dataOperacao) VALUES (5, 'Plantação', 'un',   30.0,  TO_DATE('06/10/2016', 'DD/MM/YYYY'));

SELECT to_char(dataCriacao, 'HH24:MI:SS') AS data_formatada
FROM operacao;